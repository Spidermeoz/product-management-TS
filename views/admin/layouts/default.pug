doctype html
html(lang="vi")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(name="description", content="Admin Dashboard - Quản lý sản phẩm chuyên nghiệp")
        title #{pageTitle}

        // Bootstrap 4.6 CSS
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        // Font Awesome 6
        link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css")

        // Custom CSS
        link(rel="stylesheet", href="/admin/css/style.css")

    body
        // Particles background (for header sparkle)
        #particles.particles(aria-hidden="true")

        // Header
        include ../partials/header.pug

        .body
            .container-fluid(style="margin-top:56px")
                .row
                    // Sidebar
                    include ../partials/sider.pug

                    // Main area
                    block main

        // Toast notifications container
        #toastContainer.toast-container(aria-live="polite", aria-atomic="true")

    // jQuery (slim)
    script(src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js")
    // Bootstrap Bundle (Popper included)
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js")
    // Chart.js (pin version 4.4.1)
    script(src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js")
    // App JS
    script(src="/admin/js/script.js")
