extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    .col-lg-10
        .main-content#mainContent(role="main")
            +alert-success(5000)
            section#products-section.content-section
                .card
                    .card-header.d-flex.justify-content-between.align-items-center
                        h5.mb-0
                            i.fas.fa-box.mr-2
                            | #{pageTitle}
                        .d-flex.align-items-center
                            a#addBtn.btn.btn-primary.btn-glow(
                                href= `/${prefixAdmin}/roles/create`
                            )
                                i.fas.fa-plus.mr-2
                                | Thêm nhóm quyền

                .card
                    .card-body
                        .table-responsive
                            table#productsTable.table.table-hover(aria-describedby="Danh sách sản phẩm")
                            table(
                                class="table table-hover table-sm"
                                checkbox-multi
                            )
                                thead.thead-dark
                                    tr
                                        th STT
                                        th(data-sort="name" role="button" tabindex="0" aria-label="Sắp xếp theo tiêu đề")
                                            | Tiêu đề
                                            i.fas.fa-sort.ml-1
                                        th Hành động
                                tbody#productsTableBody
                                    each role, idx in roles
                                        tr(data-id=role._id)
                                            td #{idx + 1}
                                            td
                                                strong= role.title
                                            td
                                                a.btn.btn-secondary.btn-sm.btn-glow(
                                                    href=`/${prefixAdmin}/roles/detail/${role._id}`
                                                    aria-label=`Xem chi tiết sản phẩm ${role.title}`
                                                )
                                                    i.fas.fa-eye.mr-1
                                                    | Chi tiết
                                                a.btn.btn-warning.btn-sm.btn-glow(
                                                href=`/${prefixAdmin}/roles/edit/${role._id}`
                                                aria-label=`Sửa sản phẩm ${role.title}`
                                                )
                                                    i.fas.fa-edit.mr-1
                                                    | Sửa
                                                form.d-inline(method="POST", action=`/${prefixAdmin}/roles/delete/${role._id}?_method=DELETE`)
                                                    button.btn.btn-danger.btn-sm.btn-glow(
                                                        type="button"
                                                        button-delete
                                                        aria-label=`Xóa sản phẩm ${role.title}`
                                                    )
                                                        i.fas.fa-trash.mr-1
                                                        | Xóa

                        form(
                            action= ""
                            method="POST"
                            id = "form-change-status"
                            data-path = `/${prefixAdmin}/roles/change-status`
                        ) 

                        form(
                            action= ""
                            method="POST"
                            id = "form-delete-item"
                            data-path = `${prefixAdmin}/roles/delete`
                        ) 

                script(src="/admin/js/product.js")