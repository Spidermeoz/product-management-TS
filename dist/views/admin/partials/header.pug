    .container-fluid
        button#sidebarToggle.btn.btn-link.text-white.d-lg-none(type="button" aria-label="Mở/đóng sidebar")
            i.fas.fa-bars

        a.navbar-brand(href=`/${prefixAdmin}/dashboard`)
            i.fas.fa-crown.mr-2
            | Admin - #{authUser.fullName}

